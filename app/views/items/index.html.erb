<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Count</th>
      <th>Price</th>
      <th>Image</th>
      <th>Storage</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.count %></td>
        <td><%= item.price %></td>
        <td>
          <% if item.image.attached? %>
            <img src="<%= url_for item.image %>", class='thumbnail'>
          <% end %>
        </td>
        <td><%= item.storage.name %></td>
        <td>
          <% item.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="page_nav">
  <% page = params[:page].to_i %>
  <div><%= link_to 'Prev', items_path(:page => "#{page-1}") %></div>
  <div class="page_nav_number">
    <a><%=  page %></a>
  </div>
  <div class="">
    <%= link_to 'Next', items_path(:page => "#{page+1}") %>
  </div>

</div>


