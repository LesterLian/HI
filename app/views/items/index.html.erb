<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Count</th>
      <th>Price</th>
      <th>Image</th>
      <th>Storage</th>
      <th>Tags</th>
      <th>Time in</th>
      <th>Time out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.last(20).each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.count %></td>
        <td><%= item.price %></td>
        <td>
          <% if item.image.attached? %>
            <img src="<%= url_for item.image %>", class='thumbnail'>
          <% end %>
        </td>
        <td><%= item.storage.name %></td>
        <td>
          <% item.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
        </td>
        <td><%= item.time_in %></td>
        <td><%= item.time_out %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
